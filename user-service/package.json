    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "nestjs-pino": "^4.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
