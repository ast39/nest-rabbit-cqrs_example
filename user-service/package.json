  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "yarn prisma generate && yarn prisma migrate deploy && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "yarn prisma generate && yarn prisma migrate deploy && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prisma:format": "yarn prisma format",
    "prisma:validate": "yarn prisma validate",
    "prisma:generate": "yarn prisma generate",
    "prisma:studio": "yarn prisma studio",
    "prisma:pull": "yarn prisma db pull",
    "prisma:push": "yarn prisma db push",
    "prisma:seed": "yarn prisma db seed",
    "migrate:create": "yarn prisma migrate dev --create-only",
    "migrate:deploy": "yarn prisma migrate deploy",
    "migrate:reset": "yarn prisma migrate reset",
    "migrate:resolve": "yarn prisma migrate resolve",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
